<% include ../index1.ejs %>
<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800"><%= title %></h1>
<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>STT</th>
                    <th>Tên</th>
                    <th>SĐT</th>
                    <th>Phòng ban</th>
                    <th>Mã nhân viên</th>
                    <th>Email </th>
                    <th>Địa chỉ </th>
                    <th>Ngày sinh  </th>
                    <th>Trạng thái</th>
                    <th>Hành động</th>
                </tr>
                </thead>
                <tfoot>
                <tr>
                    <th>STT</th>
                    <th>Tên</th>
                    <th>SĐT</th>
                    <th>Phòng ban</th>
                    <th>Mã nhân viên</th>
                    <th>Email </th>
                    <th>Địa chỉ </th>
                    <th>Ngày sinh  </th>
                    <th>Trạng thái</th>
                    <th>Hành động</th>
                </tr>
                </tfoot>
                <tbody>
                <% usern.forEach(function(item) { %>
                    <tr>
                        <td><%= item.id %></td>
                        <td><%= item.username %></td>
                        <td><%= item.phone %></td>
                        <td><%= item.department_id %></td>
                        <td><%= item.mnv %></td>
                        <td><%= item.email %></td>
                        <td><%= item.address %></td>
                        <td><%= item.birthday %></td>
                        <td><%= item.status %></td>
                        <td>
                            <a href="javascript:void(0);" onclick="confirmDelete('/admin/department/delete/<%= item.id %>','<%= item.name_department %>')"
                               class="bt"><button type="button" class="btn btn-info  btn-user ">Cập nhật</button></a>
                        </td>
                    </tr>
                <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<% include ../index2.ejs %>
<script>
    function confirmDelete(url, catename) {
        var conf = confirm(`Bạn có muốn xóa phòng ban? ${catename}`);
        if (conf == true) {
            window.location.href = url;
        }
    }

</script>
